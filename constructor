"""Constuction exercise."""


class Empty:
    """An empty class without constructor."""

    pass


class Person:
    """Represent a person with first name, last name, and age."""

    def __init__(self):
        """
        Initialize a new Person object with default values.

        Attributes:
        - firstname (str): The first name of the person.
        - lastname (str): The last name of the person.
        - age (int): The age of the person.
        """
        self.firstname = ""
        self.lastname = ""
        self.age = 0


class Student:
    """Represent a student with first name, last name, and age."""

    def __init__(self, firstname, lastname, age):
        """
        Initialize a new Student object.

        Parameters:
        - firstname (str): The first name of the student.
        - lastname (str): The last name of the student.
        - age (int): The age of the student.
        """
        self.firstname = firstname
        self.lastname = lastname
        self.age = age


if __name__ == '__main__':
    # Empty class usage
    empty_instance = Empty()

    # Person class usage
    person_instance = Person()
    person_instance.firstname = "John"
    person_instance.lastname = "Doe"
    person_instance.age = 30

    # Student class usage
    student_instance = Student("Jane", "Doe", 25)
